<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--  标题栏   -->
    <RelativeLayout
        android:id="@+id/register_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/bg_topbar">

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66C1D8"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="@color/text_topbar"
            android:textSize="28sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="@color/div_white" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/register_username_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <!--用户名编辑框-->
        <EditText
            android:id="@+id/register_input_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="用户名"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:singleLine="true" />

        <!--用户图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/user"
            android:visibility="visible" />
    </FrameLayout>
    <!--************密码******************-->
    <FrameLayout
        android:id="@+id/register_passwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center" >

        <!--密码编辑框-->
        <EditText
            android:id="@+id/register_input_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:maxLength="20"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="密码"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:inputType="textPassword"
            android:singleLine="true" />

        <!--密码图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/passwd" />

    </FrameLayout>
    <!-- *************** 确认密码 ****************  -->
    <FrameLayout
        android:id="@+id/confirm_passwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center" >

        <!--密码编辑框-->
        <EditText
            android:id="@+id/confirm_input_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:maxLength="20"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="确认密码"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:inputType="textPassword"
            android:singleLine="true" />

        <!--密码图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/passwd" />

        <!--隐藏显示密码按钮-->
        <Button
            android:id="@+id/passwd_eye_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@mipmap/eye"
            android:visibility="invisible"  />
    </FrameLayout>
    <!-- ************真实姓名****************   -->
    <FrameLayout
        android:id="@+id/realname_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <!--真实姓名编辑框-->
        <EditText
            android:id="@+id/register_input_realname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="真实姓名"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:singleLine="true" />

        <!--真实姓名图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/user"
            android:visibility="visible" />
    </FrameLayout>
    <!-- ************手机****************   -->
    <FrameLayout
        android:id="@+id/mobile_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <!--手机编辑框-->
        <EditText
            android:id="@+id/register_input_mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="手机"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:singleLine="true" />

        <!--邮箱图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/mobile"
            android:visibility="visible" />
    </FrameLayout>
    <!-- ************邮箱****************   -->
    <FrameLayout
        android:id="@+id/email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <!--邮箱编辑框-->
        <EditText
            android:id="@+id/register_input_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:minHeight="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="60dp"
            android:hint="邮箱"
            android:textColorHint="#95A1AA"
            android:textColor="@color/bg_black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@drawable/edittext_selector"
            android:singleLine="true" />

        <!--邮箱图标-->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/email"
            android:visibility="visible" />
    </FrameLayout>
    <!--注册按钮-->
    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="#4E8DB6"
        android:gravity="center"
        android:text="注册"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
        <!--    -->
    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#4E8DB6"
        android:gravity="center"
        android:text="返回登录"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
</LinearLayout>