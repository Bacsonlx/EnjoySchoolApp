<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_linear_layout"
    android:layout_margin="5dp" >

    <!--    瀑布布局  -->
    <ImageView
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/delete_machine"
        android:layout_gravity="right"
        />
    <ImageView
        android:id="@+id/kitchen_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kitchen_img"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/kitchen_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="厨房编号：0001"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/kitchen_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="地点： 精思苑2号楼"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/kitchen_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="等待人数： 5"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/kitchen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="等待时间： 06:00"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/modify"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/modify_machine"
        android:layout_gravity="right"
        />
</LinearLayout>